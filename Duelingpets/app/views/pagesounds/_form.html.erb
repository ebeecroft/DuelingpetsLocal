<%= form_for(@pagesound) do |f| %>
  <% if @pagesound.errors.any? %>
    <div id="errorexplan">
      <h2 id="errorheader"><%= pluralize(@pagesound.errors.count, "error") %> prohibited this pagesound from being saved:</h2>

      <ul>
      <% @pagesound.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  OGG files
  <div class="field">
     <%= audio_tag(@pagesound.ogg_url.to_s, :controls => true) if @pagesound.ogg? %>
  </div>
  <div class="field">
     <%= f.file_field :ogg %>
  </div>
  <div class="field">
    <%= f.label :remote_ogg_url, "or OGG URL" %><br />
    <%= f.text_field :remote_ogg_url %>
    <%= f.hidden_field :ogg_cache %>
  </div>
  MP3 files
  <div class="field">
     <%= audio_tag(@pagesound.mp3_url.to_s, :controls => true) if @pagesound.mp3? %>
  </div>
  <div class="field">
     <%= f.file_field :mp3 %>
  </div>
  <div class="field">
    <%= f.label :remote_mp3_url, "or MP3 URL" %><br />
    <%= f.text_field :remote_mp3_url %>
    <%= f.hidden_field :mp3_cache %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
  <p class="navlinks"><%= link_to 'Back', pagesounds_path %></p>
<% end %>
