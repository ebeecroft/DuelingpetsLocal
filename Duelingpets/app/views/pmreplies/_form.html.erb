<%= form_for([@pm, @pmreply], :html => {:multipart => true}) do |f| %>
  <% if @pmreply.errors.any? %>
    <div id="errorexplan">
      <h2 id="errorheader"><%= pluralize(@pmreply.errors.count, "error") %> prohibited this pmreply from being saved:</h2>

      <ul>
      <% @pmreply.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  OGV files
  <div class="field">
     <%= video_tag @pmreply.ogv_url(:thumb).to_s, size: "200x200", :controls => true if @pmreply.ogv? %>
  </div>
  <div class="field">
     <%= f.file_field :ogv %>
  </div>
  <div class="field">
    <%= f.label :remote_ogv_url, "or OGV URL" %><br />
    <%= f.text_field :remote_ogv_url %>
    <%= f.hidden_field :ogv_cache %>
  </div>
  MP4 files
  <div class="field">
     <%= video_tag @pmreply.mp4_url(:thumb).to_s, size: "200x200", :controls => true if @pmreply.mp4? %>
  </div>
  <div class="field">
     <%= f.file_field :mp4 %>
  </div>
  <div class="field">
    <%= f.label :remote_mp4_url, "or MP4 URL" %><br />
    <%= f.text_field :remote_mp4_url %>
    <%= f.hidden_field :mp4_cache %>
  </div>
  Image files
  <div class="field">
     <%= image_tag @pmreply.image_url(:thumb).to_s if @pmreply.image? %>
  </div>
  <div class="field">
     <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :remote_image_url, "or Image URL" %><br />
    <%= f.text_field :remote_image_url %>
    <%= f.hidden_field :image_cache %>
  </div>
  OGG files
  <div class="field">
     <%= audio_tag @pmreply.ogg_url.to_s, width: 200, :controls => true if @pmreply.ogg? %>
  </div>
  <div class="field">
     <%= f.file_field :ogg %>
  </div>
  <div class="field">
    <%= f.label :remote_ogg_url, "or OGG URL" %><br />
    <%= f.text_field :remote_ogg_url %>
    <%= f.hidden_field :ogg_cache %>
  </div>
  MP3 files
  <div class="field">
     <%= audio_tag @pmreply.mp3_url.to_s, width: 200, :controls => true if @pmreply.mp3? %>
  </div>
  <div class="field">
     <%= f.file_field :mp3 %>
  </div>
  <div class="field">
    <%= f.label :remote_mp3_url, "or MP3 URL" %><br />
    <%= f.text_field :remote_mp3_url %>
    <%= f.hidden_field :mp3_cache %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
  <p class="navlinks"><%= link_to 'Back', user_pm_path(@pm.from_user, @pm) %></p>
<% end %>
