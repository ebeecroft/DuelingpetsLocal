<%= form_for([@user, @pm]) do |f| %>
  <% if @pm.errors.any? %>
    <div id="errorexplan">
      <h2 id="errorheader"><%= pluralize(@pm.errors.count, "error") %> prohibited this pm from being saved:</h2>

      <ul>
      <% @pm.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  PM avatar files
  <div class="field">
     <%= image_tag @pm.topicavatar_url(:thumb).to_s if @pm.topicavatar? %>
  </div>
  <div class="field">
     <%= f.file_field :topicavatar %>
  </div>
  <div class="field">
    <%= f.label :remote_topicavatar_url, "or PM Avatar URL" %><br />
    <%= f.text_field :remote_topicavatar_url %>
    <%= f.hidden_field :topicavatar_cache %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
  <p class="navlinks"><%= link_to 'Back', user_path(@user) %></p>
<% end %>
