<%= form_for(@registration) do |f| %>
   <br>
   <% if @registration.errors.any? %>
      <div class="homepagestyle">
      <div id="errorexplan">
         <h2 id="errorheader"><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

         <ul>
            <% @registration.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
            <% end %>
         </ul>
      </div>
      </div>
   <% end %>
   <br>
   <p class="homepagestyle"><%= f.label :first_name %></p>
   <p class="homepagestyle"><%= f.text_field :first_name %></p>
   <p class="homepagestyle"><%= f.label :last_name, "Last name(Only visible to owner)" %></p>
   <p class="homepagestyle"><%= f.text_field :last_name %></p>
   <p class="homepagestyle"><%= f.label :email, "Email(Only visible to owner)" %></p>
   <p class="homepagestyle"><%= f.text_field :email %></p>
   <p class="homepagestyle"><%= f.label :birthday, "Birthday(logged_in only view)" %></p>
   <p class="homepagestyle"><%= f.date_select :birthday, start_year: Date.today.year - 170, end_year: Date.today.year %></p>
   <p class="homepagestyle"><%= f.label :country, "Country(logged_in only view)" %></p>
   <p class="homepagestyle"><%= f.text_field :country %></p>
   <p class="homepagestyle"><%= f.label :country_timezone, "Timezone(logged_in only view)" %></p>
   <p class="homepagestyle"><%= f.time_zone_select :country_timezone, ActiveSupport::TimeZone.us_zones %></p>
   <p class="homepagestyle"><%= f.label :login_id, "Login Name(Only used for login)" %></p>
   <p class="homepagestyle"><%= f.text_field :login_id %></p>
   <p class="homepagestyle"><%= f.label :vname, "Virtual Name" %></p>
   <p class="homepagestyle"><%= f.text_field :vname %></p>
   <div class="actions">
      <p class="homepagestyle"><%= f.submit %></p>
   </div>
   <br>
   <div class="homepagestyle">
      <p class="navlinks"><%= link_to 'Back', root_path %></p>
   </div>
<% end %>
