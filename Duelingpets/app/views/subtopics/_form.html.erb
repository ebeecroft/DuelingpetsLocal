<%= form_for([@maintopic, @subtopic]) do |f| %>
  <% if @subtopic.errors.any? %>
    <div id="errorexplan">
      <h2 id="errorheader"><%= pluralize(@subtopic.errors.count, "error") %> prohibited this subtopic from being saved:</h2>

      <ul>
      <% @subtopic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :forumgroup_id, "Select Group" %><br />
    <%= f.collection_select(:forumgroup_id, @group, :id, :name) %>
  </div>
  Topicavatar files
  <div class="field">
     <%= image_tag @subtopic.topicavatar_url(:thumb).to_s if @subtopic.topicavatar? %>
  </div>
  <div class="field">
     <%= f.file_field :topicavatar %>
  </div>
  <div class="field">
    <%= f.label :remote_topicavatar_url, "or Topicavatar URL" %><br />
    <%= f.text_field :remote_topicavatar_url %>
    <%= f.hidden_field :topicavatar_cache %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
  <p class="navlinks"><%= link_to 'Back', topiccontainer_maintopic_path(@maintopic.topiccontainer, @maintopic) %></p>
<% end %>
