<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="errorexplan">
      <h2 id="errorheader"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last name(Only visible to owner)" %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email, "Email(Only visible to owner)" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :birthday, "Birthday(logged_in only view)" %><br />
    <%= f.date_select :birthday, start_year: Date.today.year - 170, end_year: Date.today.year %>
  </div>
  <div class="field">
    <%= f.label :country, "Country(logged_in only view)" %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :country_timezone, "Timezone(logged_in only view)" %><br />
    <%= f.time_zone_select :country_timezone, ActiveSupport::TimeZone.us_zones %>
  </div>
  <div class="field">
    <%= f.label :military_time, "Military Time" %><br />
    <%= f.check_box :military_time %>
  </div>
  <div class="field">
    <%= f.label :login_id, "Login Name(Only used for login)" %><br />
    <%= f.text_field :login_id %>
  </div>
  <div class="field">
    <%= f.label :vname, "Virtual Name" %><br />
    <%= f.text_field :vname %>
  </div>
  <div class="pagetext">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="pagetext">
    <%= f.label :password_confirmation, "Password Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
  <% if object == "Edit" %>
     <p class="navlinks"><%= link_to 'Back', @user %></p>
  <% else %>
     <p class="navlinks"><%= link_to 'Back', root_path %></p>
  <% end %>
<% end %>
